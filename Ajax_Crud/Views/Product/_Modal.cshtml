<div class="modal fade" id="form" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header border-bottom-0">
                <h5 class="modal-title" id="exampleModalLabel"></h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>

            <div class="modal-body">
                <form>
                    <div class="form-group">
                        <label for="text">Name Product :</label>
                        <input class="form-control" value="" id="name" placeholder="Name Product">
                        <span id="validate_name" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label for="text">Price Product :</label>
                        <input class="form-control" type="number" min="0" value="" id="price" placeholder="Price Product">
                    </div>
                    <div class="form-group">
                        <label for="text">Quantity Product :</label>
                        <input class="form-control" type="number" min="0" max="1000" value="" id="quantity" placeholder="Quantity Product">
                    </div>
                </form>
            </div>
            <div class="modal-footer border-top-0 d-flex justify-content-center">
                <button class="btn btn-secondary" data-dismiss="modal" id="cancel">Cancel</button>
                <button id="save" class="btn btn-success">Submit</button>
            </div>

        </div>
    </div>
</div>